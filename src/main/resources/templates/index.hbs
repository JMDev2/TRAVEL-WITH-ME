{{#partial "content"}}
    <div class="showcase d-md-flex pt-5 align-items-center">
        <div class="showcase-txt align-self-center">
            <h1 class="showcase-txt-lead text-center fs-1">Where the Journey Begins</h1>
            <h3 class="showcase-text-follow text-center .fs-3 fw-bold text-light">
                Plan and book your perfect trip with expert advice,<br> travel tips,
                destination information and inspiration from us.<br />
                We haven't been everywhere but it's on our List!
            </h3>
            <p class="showcase-text-follow text-center .fs-3 fw-bold ">
                Get started by sharing your experience on your last vacation
            </p>
            <div class="pt-5">
                <p><a class="btn btn-outline-primary text-center" href="/destination-form/new">+ Add Endangered animal</a></p>
                <p><a class="btn btn-outline-primary text-center" href="/review-form/new">+ Add Endangered animal</a></p>
            </div>
        </div>
        <div class="showcase-image">
            <img src="/img/showcase.png" alt="" />
        </div>
    </div>

    <div class="start">
        <p class="text-center start-text pt-5">Start Exploring</p>



        <div class="place-cards rowa">
            {{#each places}}
                <a href="places/{{id}}">
                    <div class="w3-container column">
                        <div class="w3-card-4" style="width: 70%">
                            <header class="w3-container w3-light-grey">
                                <h3><img
                                        src="{{imageurl}}" height="100px" width="100px"
                                        alt="Avatar"
                                        class="w3-left w3-circle w3-margin-right"
                                />{{location}}</h3>
                                <p class="text-muted"><i class="fa fa-map-marker" aria-hidden="true"></i> {{placeLocation}}</p>
                            </header>
                            <div class="w3-container">
                                <p>
                                    {{description}}
                                </p>

                            </div>

                        </div>
                    </div>
                </a>
            {{/each}}
        </div>

    </div>

{{/partial}}
{{> "layout.hbs"}}