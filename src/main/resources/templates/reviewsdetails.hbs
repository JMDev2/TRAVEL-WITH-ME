{{#partial "content"}}


    <div class="card mb-3" style="width: 100%">
        <div class="row g-0">
            <div class="col-md">
                <img src="{{imageurl}}" class="img-fluid" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h1 class="card-title burj">{{name }}</h1>

                    <p class="card-text">
                    <p class="text-muted"
                    ><i class="fa fa-map-marker" aria-hidden="true"></i>
                        {{ location }}</p
                    >
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="review-content d-flex flex-col">
        <div class="Description col-md-3">
            <p class="comp-description"><h1>About Destination</h1></p>
            <p>{{ description }}
            </p>
            <a href="/review/{{ review.id}}/new" class="button mb-4">Add Review</a>
        </div>

        <div class="d-flex flex-column">

            {{#each review}}
                <div class="reviewer col-md-4">
                    <div class="card text-center">
                        <div class="card-header">
                            <div class="avatar-info"> <p><img src="https://i.pravatar.cc/100" alt="" style="width: 100px; height: 100px"></p></div>

                            <div>
                                <p>{{name}}</p>
                                <p>Rating: {{rating}}</p>
                                <i class="fa fa-map-marker" aria-hidden="true"></i> {{location}}
                                <p>posted at {{placeid}}</p>
                                <p>posted at {{createdAt}}</p>
                            </div>

                        </div>

                        <div class="card-body">
                            <p class="card-text">{{message}}</p>

                        </div>

                    </div>
                    <br>
                    <br>
                </div>
            {{/each}}

        </div>

    </div>


{{/partial}}

{{> layout.hbs}}